<div>
  <%= link_to 'Back', previous_page_helper() %>
  <h1>Make a new purchase</h1>
  <%= form_with model: [@product, @purchase], local: true do |f| %>
    <div style="margin-top: 10px;">
      <div><%= f.label :quantity %><div>
      <%= f.text_field :quantity %>
    </div>
    
    <div style="margin-top: 10px;">
      <div><%= f.label :delivery_address %><div>
      <%= f.text_area :delivery_address %>
    </div>
    
    <div style="margin-top: 14px;">
      <%= f.submit "Create" %>
    </div>
  <% end %>
</div>